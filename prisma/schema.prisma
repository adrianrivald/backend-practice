datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Banner {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  alt       String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
}

model Trip {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  location    String?
  startDate   DateTime
  endDate     DateTime?
  price       Float?
  images      TripImage[]
  createdAt   DateTime    @default(now())

  @@index([startDate, endDate])
  // @@fulltext([title, description]) // optional if using Prisma fulltext support
}

model TripImage {
  id     Int   @id @default(autoincrement())
  url    String
  trip   Trip  @relation(fields: [tripId], references: [id])
  tripId Int
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}